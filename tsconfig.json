{
  "compilerOptions": {
    "incremental": true,
    "target": "ES6",
    "lib": ["es6", "dom"],
    "module": "es2015",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "types" : ["jest"]
  },
  "exclude": [
    "node_modules",
    "__tests__"
  ]
}
